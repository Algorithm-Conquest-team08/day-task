from heapq import *

def solution(scoville, K):
    #몇번 mix했는지 count
    mix = 0
    #heap data structure로 변경
    heapify(scoville)
    # scoville[0]은 항상 가장 작은 수 그리고 len은 1을 넘어야하기때문에
    while scoville[0] < K and len(scoville)>1 :
        n1 = heappop(scoville)
        n2 = heappop(scoville)
        #섞은 음식의 스코빌 지수 = 가장 맵지 않은 음식의 스코빌 지수 + (두 번째로 맵지 않은 음식의 스코빌 지수 * 2)
        heappush(scoville, n1+(n2*2))
        mix +=1
        
    #return mix 만약에 scoivlle[0]이 K보다 커서 목표에 달성했으면
    #모든 음식의 스코빌 지수를 K 이상으로 만들 수 없는 경우에는 -1을 return 합니다.
    return mix if scoville[0] >=K else -1
